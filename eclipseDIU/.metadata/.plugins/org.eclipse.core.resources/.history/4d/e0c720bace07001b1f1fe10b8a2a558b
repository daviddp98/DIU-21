package application;

import java.awt.Label;

import javafx.beans.property.DoubleProperty;
import javafx.beans.property.IntegerProperty;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.ProgressBar;
import javafx.stage.Stage;

public class Controlador {

	@FXML
	private Button btnPulsar;
	@FXML
	static Label porcentaje;
	@FXML
	public ProgressBar barProg = new ProgressBar();

	private DoubleProperty contLocal;

	@FXML
	public void abrir(ActionEvent event) throws Exception {
		try {
			Scene root = barProg.getScene();

			barProg.setProgress(barProg.getProgress() + 0.1);

			Stage stage = new Stage();
			stage.setScene(root);
			stage.setTitle("Actividad %");
			stage.show();

		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}